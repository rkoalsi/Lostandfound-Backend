<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/found-form.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
      <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body class="Found_Form">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3">I Found Something</h1>
                <%-include('./partials/messages')%>
                <form action="/found-form" method="POST">
                    <div class="item_name">
                        <label for="item_name1">Item Name</label>
                        <input type="name" name='name' class="form-control" id="name"
                            value="<%= typeof name != 'undefined' ? name : '' %>" />
                    </div>
                    <br>
                    <div class="item_type">
                        <label for="item_type1">Item Type</label>
                        <input type="type" name='type' class="form-control" id='type'
                            value="<%= typeof type != 'undefined' ? type : '' %>" />
                    </div>
                    <br>
                    <div class="about_item">
                        <label for="About_item1">About Item</label>
                        <input type="about" name='about' class="form-control" id="about"
                            value="<%= typeof about != 'undefined' ? about : '' %>" />
                    </div>
                    <div class="image_btn">
                        <input type="file" id="file" accept="image/*">
                        <label for="file">
                            <i class="material-icons">
                                add_photo_alternate</i>&nbsp;
                         </label>
                         </div>
                    <div class="found_item">
                        <label for="found_item1">Where Did You Find The Item</label>
                        <input type="where" name='where' class="form-control" id="where"
                            value="<%= typeof where != 'undefined' ? where : '' %>" />
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary btn-block">SUBMIT</button>
                </form>
            </div>
        </div>
    </div>

</body>